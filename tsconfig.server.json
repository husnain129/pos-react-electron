{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist-server",
    "rootDir": "server",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "isolatedModules": false,
    "noEmit": false
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
